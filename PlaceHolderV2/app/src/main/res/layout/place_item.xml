    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/header">

            <TextView
                android:id="@+id/streetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/latlng"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/latitude"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/longitude"
                android:visibility="invisible"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:padding="5dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="recycle_view_action"
            android:id="@+id/comments"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_btn_label"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@color/colorAccent"
                    android:onClick="recycle_view_action"
                    />

                <Button
                    android:id="@+id/direction_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/directions_btn_label"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@color/colorAccent"
                    android:onClick="recycle_view_action"
                    android:layout_toRightOf="@+id/share_btn"
                    android:layout_toEndOf="@+id/share_btn"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>


